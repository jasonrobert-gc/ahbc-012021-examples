@model PokemonViewModel

<h1>Add a Pokemon</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<PokemonType>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoveSet" class="control-label"></label>
                <input asp-for="MoveSet" class="form-control" />
                <span asp-validation-for="MoveSet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cuteness" class="control-label"></label>
                <select asp-for="Cuteness" class="form-control" asp-items="Html.GetEnumSelectList<CutenessLevel>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Cuteness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HP" class="control-label"></label>
                <input asp-for="HP" class="form-control" />
                <span asp-validation-for="HP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
